{
  "name": "nhsuk-frontend",
  "version": "1.0.0",
  "description": "NHS.UK front-end library and design system",
  "sasslintConfig": "sass-lint.yml",
  "scripts": {
    "build": "gulp build",
    "build:production": "gulp build --production",
    "postinstall": "npm run build:production",
    "start": "node server.js",
    "prewatch": "concurrently \"git pull origin master\" \"gulp build\"",
    "watch": "concurrently \"gulp watch\" \"nodemon server.js\"",
    "deploy": "git push heroku master",
    "lint-js": "./node_modules/.bin/eslint public/js/*.js",
    "lint-css": "./node_modules/.bin/sass-lint -c .sass-lint.yml '**/*.scss' -v -q"
  },
  "dependencies": {
    "body-parser": "^1.15.1",
    "compression": "^1.6.2",
    "express": "^4.13.4",
    "express-flash": "0.0.2",
    "express-session": "^1.2.1",
    "express-validator": "^5.1.2",
    "gulp": "^3.9.1",
    "gulp-csso": "^3.0.1",
    "gulp-if": "^2.0.0",
    "gulp-plumber": "^1.1.0",
    "gulp-sass": "^4.0.1",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-uglify": "^3.0.0",
    "method-override": "^2.3.5",
    "morgan": "^1.7.0",
    "nunjucks": "^3.1.2",
    "reload": "^2.2.2",
    "sass-mq": "^4.0.2",
    "vinyl-buffer": "^1.0.0"
  },
  "devDependencies": {
    "concurrently": "^3.5.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-nhsuk": "^0.15.0",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-mocha": "^5.0.0",
    "gulp-autoprefixer": "^5.0.0",
    "gulp-cssnano": "^2.1.3",
    "nodemon": "^1.17.2",
    "npm-check-updates": "^2.14.1",
    "reload": "^2.2.2",
    "run-sequence": "^2.2.1",
    "sass-lint": "^1.12.1"
  },
  "engines": {
    "node": "6.1.0"
  }
}
