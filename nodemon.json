{
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
        "js": "node --harmony"
    },
    "events": {
        "restart": "osascript -e 'display notification \"App restarted\"'"
    },
    "watch": [
        "views/",
        "scss/"
    ],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js, html, scss"
}
